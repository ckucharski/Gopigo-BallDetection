<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dpkc.gopigo_app.MainActivity"
    android:background="#883333">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Gopigo App"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#B78484"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_start"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="177dp"
        android:padding="20dp"
        android:background="#B78484"
        android:textColor="#883333"
        android:textStyle="bold"
        android:onClick="clickOnStartBtn"
        android:text="DÃ©tecter les cercles"
        android:visibility="visible" />



    <ListView
        android:id="@+id/lv_db"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_start"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:background="#B78484" />

</RelativeLayout>
